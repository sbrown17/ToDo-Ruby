<p id="notice"><%= notice %></p>

<h1>Todo Lists</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody class="">
    <% @todo_lists.each do |todo_list| %>
      <tr class="">
        <td class="todo-title"><%= todo_list.title %></td>
        <td class="todo-description"><%= todo_list.description %></td>
        <td class="todo-show"><%= link_to 'Show', todo_list %></td>
        <td class="todo-edit"><%= link_to 'Edit', edit_todo_list_path(todo_list) %></td>
        <td class="todo-destroy"><%= link_to 'Destroy', todo_list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

